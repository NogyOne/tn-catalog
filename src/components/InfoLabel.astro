---
interface InfoLabelProps {
  title: string;
  description: string[];
  className?: string;
}

const { title, description, className } = Astro.props as InfoLabelProps;
---

<section class={`py-20 bg-theme-blue text-white shadow-xl ${className}`}>
  <div class="flex flex-col justify-between gap-4 md:flex-row md:items-center">
    <div class="text-center w-full lg:w-1/2 px-5 mx-auto animate-fade-in-up">
      <h2 class="font-serif text-3xl font-light italic">
        {title}
      </h2>
      <div class="vintage-divider my-4"></div>
      <p class="animate-fade-in-up animate-delay-300">
        {
          description.map((line: string) => (
            <span>
              {line}
              <br />
            </span>
          ))
        }
      </p>
    </div>
  </div>
</section>
